<h3>New lecture</h3>

<%= form_for @lecture do |f| %>
  <div>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :content %><br />
    <%= f.rich_text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit "Create" %>
  </div>

<%end %>